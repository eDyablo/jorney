SubDir TOP jorney zmq broker cpp ;

zmq.broker.cpp.dir.root = $(SUBDIR) ;

SubInclude TOP jorney zmq broker cpp simple ;

Depends zmq.broker.cpp :
		zmq.broker.cpp.simple.app
		;

